{% extends 'base.html.twig' %}
{% block bread %}
	Login
{% endblock %}

{% block body %}
	<div class="container w-full md:w-2/3 xl:w-1/2 mx-auto mt-6 lg:mt-16 rounded-md shadow-md shadow-cyan-500/50  text-left md:text-center ">
		<form action="{{ path('app_login') }}" method="POST">
      
			<div>
				<label class="block text-sm text-grey-800 dark:text-grey-200 font-medium mb-2">Email</label>
				<input
				type="email" name="_username" value="{{ lastUsername }} " class="block w-full border border-gray-300 dark:border-gray-700 dark:text-gray-800 rounded-md px-2 mb-4"/>
			{# mora biti _username than symfony will automatically process it #}
			</div>

			<div>
				<label class="block text-sm text-grey-800 dark:text-grey-200 font-medium mb-2">Password</label>
				<input
				type="password" name="_password" class="block w-full border border-gray-300 dark:border-gray-700 dark:text-gray-800 rounded-md px-2 mb-4"/>
			{# mora biti _password than symfony will automatically process it #}
			</div>
			<input
			type="hidden" name="_target_path" value="/micro-post"/>
			{# mora biti _target_path, than symfony will automatically process it #}

			<button type="submit" class="block w-full mx-auto  bg-cyan-500 text-white text-lg border border-transparent rounded-md hover:scale-105 hover:bg-cyan-600 dark:hover:bg-cyan-300 ">Login</button>
		</form>
	</div>

	<div class="mt-4 text-center text-gray-600 dark:text-gray-400">
		Still have no account?
		<a href=" {{ path('app_register') }}" class="text-cyan-700/80 dark:text-cyan-300 font-medium">Register here</a>
	</div>

{% endblock %}
