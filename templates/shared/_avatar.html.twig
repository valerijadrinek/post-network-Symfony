{% if profile and profile.image %}
<img src="{{ profiles ~ profile.image }}"" class="inline-block h-{{size}} w-{{size}} rounded-full ring-2 ring-white dark:ring-gray-600" /> {# this profiles refers to service.yml where is set as profiles(meanning path)
                                              and then add globals attribute to twig.yml to be visible to twig templates 
                                              and ~ is in twig added to concatenate string
                                              #}
   
{% else %}
  <div class="inline-block bg-gray-200 dark:bg-gray-700 rounded-full text-3xl h-{{size}} w-{{size}} ring-2 ring-white dark:ring-gray-600"></div>
{% endif %}